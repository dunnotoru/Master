<Window x:Class="Master.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Master"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <DockPanel>
    <StackPanel DockPanel.Dock="Right">
      <TextBlock Text="{Binding FileToOpen}"/>
      <Button Click="ButtonBase_OnClick"
              Margin="10"
              Padding="5 2"
              Content="ВЫБРАТЬ ТЕСТИК" />
      <Label Content="НАЙТИ СЛОВЕЧКО"/>
      <TextBox Text="{Binding Substring}"/>
      <Button Command="{Binding SendJobCommand}"
              Margin="10"
              Padding="5 2"
              Content="ОБКАШЛЯТЬ С КЛИЕНТИКАМИ" />
    </StackPanel>
    <Grid>
      <DockPanel HorizontalAlignment="Left" MinWidth="100">
        <TextBlock DockPanel.Dock="Top" Margin="10">КЛИЕНТУРА</TextBlock>
        <ListView ItemsSource="{Binding Clients}">
          <ListView.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding StringFormat=КЛИЕНТУРА N.{0}}" />
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
      </DockPanel>
    </Grid>
  </DockPanel>
</Window>