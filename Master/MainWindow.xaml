<Window x:Class="Master.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Master"
        xmlns:ff="clr-namespace:Master.FormFields"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainViewModel}"
        Title="MainWindow" Height="450" Width="800"
        Closing="MainWindow_OnClosing">
  <Window.Resources>
    <Style TargetType="TextBlock">
      <Setter Property="FontFamily" Value="Comic Sans MS" />
      <Setter Property="FontWeight" Value="ExtraBold" />
    </Style>
    <Style TargetType="TextBox">
      <Setter Property="FontFamily" Value="Comic Sans MS" />
      <Setter Property="FontWeight" Value="ExtraBold" />
    </Style>
    <Style TargetType="Button">
      <Setter Property="FontFamily" Value="Comic Sans MS" />
      <Setter Property="FontWeight" Value="ExtraBold" />
    </Style>
    <Style TargetType="Label">
      <Setter Property="FontFamily" Value="Comic Sans MS" />
      <Setter Property="FontWeight" Value="ExtraBold" />
    </Style>
    <DataTemplate DataType="{x:Type ff:TextField}">
      <StackPanel>
        <Label Content="{Binding LabelText}" />
        <TextBox Text="{Binding Value}" />
      </StackPanel>
    </DataTemplate>
    <DataTemplate DataType="{x:Type ff:FileField}">
      <StackPanel>
        <Label Content="{Binding LabelText}" />
        <Button Content="Select" Command="{Binding SelectFileCommand}" />
        <TextBlock Text="{Binding Value}" FontSize="10" />
      </StackPanel>
    </DataTemplate>
  </Window.Resources>
  <DockPanel>
    <StackPanel DockPanel.Dock="Right">
      <Label Content="Доступные Алгоритмы:" Margin="10" />
      <ListView ItemsSource="{Binding Modules}"
                SelectedItem="{Binding SelectedModule}"
                SelectionMode="Single"
                MaxWidth="500"
                Margin="5" MinHeight="100">
        <ListView.ItemTemplate>
          <DataTemplate>
            <StackPanel>
              <TextBlock Text="{Binding Executor.Name}" FontSize="16" />
              <TextBlock Text="{Binding ModuleFile.Name}" FontSize="10" TextWrapping="WrapWithOverflow" />
            </StackPanel>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      <Label Content="Параметры:" Margin="10" />
      <ItemsControl ItemsSource="{Binding Fields}" />
      <Button Command="{Binding EnqueueJobCommand}"
              Margin="10"
              Padding="5 2"
              Content="Распределить Работу" />
      <Button Command="{Binding DoWorkCommand}"
              Margin="10"
              Padding="5 2 "
              Content="Выполнить Работу На Сервере" />
    </StackPanel>
    <Grid DockPanel.Dock="Left">
      <DockPanel HorizontalAlignment="Left" MinWidth="100">
        <Label DockPanel.Dock="Top" Margin="10" Content="Клиенты" />
        <ListView ItemsSource="{Binding Clients}" Margin="5">
          <ListView.ItemTemplate>
            <DataTemplate>
              <DockPanel>
                <TextBlock Text="{Binding StringFormat=Клиент N.{0}}" />
              </DockPanel>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
      </DockPanel>
    </Grid>
    <DockPanel>
      <Label DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="10" Content="Результаты работы" />
      <ListView ItemsSource="{Binding Results}" BorderBrush="Black" Margin="5" BorderThickness="5">
        <ListView.ItemTemplate>
          <DataTemplate>
            <Border BorderBrush="Red" BorderThickness="3">
              <StackPanel>
                <TextBlock Text="{Binding Id}" />
                <TextBlock Text="{Binding TimeElapsed}" />
                <TextBlock Text="{Binding Result}" />
              </StackPanel>
            </Border>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </DockPanel>
  </DockPanel>
</Window>